@{
    View.Title = Html.MytripPageTitle(StoreLanguage.createsale, "/");
    View.Keywords=Html.MytripPageTitle(StoreLanguage.createsale, ",");
    View.Description=Html.MytripPageTitle(StoreLanguage.createsale, ",");
}
@section csslink{
<link href="/Content/calendar/ui.datepicker.css" rel="stylesheet" type="text/css" />
}
@section scriptlink{
@Html.ScriptLink("MicrosoftAjax.js,MicrosoftMvcValidation.js,ui.datepicker.js,Page/Store.CreateSale.js")
}
@section content{
<h1 class="title">@StoreLanguage.createsale</h1>

@using (Html.BeginForm()){
<div class="editor-label">
@Html.MytripLabelFor("sale", "%")
</div><div class="editor-field">
@Html.TextBoxFor(m => m.sale)
@Html.ValidationMessageFor(m => m.sale) 
</div>
<div class="editor-label">
@Html.MytripLabelFor("datestart",StoreLanguage.datestart)
@Html.ValidationMessageFor(model => model.datestart)<br />
@Html.TextBoxFor(model => model.datestart)
</div>
<div class="editor-label">
@Html.MytripLabelFor("dateclose",StoreLanguage.dateclose)
@Html.ValidationMessageFor(model => model.dateclose)<br />
@Html.TextBoxFor(model => model.dateclose)
</div>
<div class="button">
@Html.MytripButton(CoreLanguage.save, true,"left")
</div>
}
}


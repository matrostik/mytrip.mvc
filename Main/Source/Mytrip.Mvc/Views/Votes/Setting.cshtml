@{
    View.Title = Html.MytripPageTitle(VotesLanguage.votessetting, "/");
    View.Keywords=Html.MytripPageTitle(VotesLanguage.votessetting, ",");
    View.Description=Html.MytripPageTitle(VotesLanguage.votessetting, ",");
}
@section scriptlink{
@Html.ScriptLink("MicrosoftAjax.js,MicrosoftMvcValidation.js")
}
@section content{
<h1 class="title">@VotesLanguage.votessetting</h1>

@using (Html.BeginForm()) {
<fieldset>
<div class="editor-field">
@Html.CheckBoxFor(model => model.unlockVotes)
@Html.MytripLabelFor("unlockVotes",VotesLanguage.unlockvotes)
</div><div class="editor-label">
@Html.MytripLabelFor("nameVotes",VotesLanguage.namevotes)
</div><div class="editor-field">
@Html.TextBoxFor(model => model.nameVotes)
@Html.ValidationMessageFor(model => model.nameVotes)
</div>
<div class="button">
@Html.MytripButton(CoreLanguage.save,true,"left")
@Html.MytripButton("/Core/ControlPanel", CoreLanguage.cancel, false,"left") 
</div>
</fieldset>            
}
}


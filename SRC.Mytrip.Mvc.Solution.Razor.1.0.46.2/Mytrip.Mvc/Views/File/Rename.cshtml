}
@{
    View.Title = Html.MytripPageTitle(CoreLanguage.rename_file_or_folder, "/");
    LayoutPage = "~/Views/Shared/_Layout.cshtml";
    View.Keywords=Html.MytripPageTitle(CoreLanguage.rename_file_or_folder, ",");
    View.Description=Html.MytripPageTitle(CoreLanguage.rename_file_or_folder, ",");
}
@section scriptlink{
@Html.ScriptLink("MicrosoftAjax.js,MicrosoftMvcValidation.js")
}
@section content{
<h1 class="title">@CoreLanguage.rename_file_or_folder</h1>    
<div class="content">
@Html.MytripImageLink(Url.Action("Index",new{id=string.Empty}),"/Content/files/Stuffed_Folder.png", Membership.ApplicationName,0,32,0)
@Html.ActionLink(Membership.ApplicationName, "Index", new { id = "()" })
@Html.MytripDirectory(Model.Directory)
</div>
@{Html.EnableClientValidation();}
@using (Html.BeginForm()){
<div class="last"></div> 
<div class="content">
<div class="editor-label">
 @Html.MytripLabelFor("Name",CoreLanguage.choose_new_name)
</div><div class="editor-field">
@Html.TextBoxFor(m=>m.Name)
@Html.ValidationMessageFor(m => m.Name) 
</div><div class="button">
@Html.MytripButton(CoreLanguage.rename,true,"left")
@Html.MytripButton(Url.Action("Index", "File", new { id = Model.Back }), CoreLanguage.back_to_list, false,"left") 
</div></div>
} 
}


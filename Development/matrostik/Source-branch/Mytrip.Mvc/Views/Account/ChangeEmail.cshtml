@{
    View.Title = Html.MytripPageTitle(CoreLanguage.change_email, "/");
    View.Keywords=Html.MytripPageTitle(CoreLanguage.change_email, ",");
    View.Description=Html.MytripPageTitle(CoreLanguage.change_email, ",");
}
@section scriptlink{
@Html.ScriptLink("MicrosoftAjax.js,MicrosoftMvcValidation.js")
}
@section content{
	<h1 class="title">@CoreLanguage.change_email</h1>
<table class="noborders">
<tr>
<td style="width: 180px;">
         <div style="text-align: center;"><a href='/Home/Profile/@TempData["username"].ToString()'>
@Html.Avatar(TempData["useremail"].ToString(), new { title="Profile"})</a></div>
     @Html.Partial("_profileSmall")
</td>
<td>
	 @{Html.EnableClientValidation();}
@using (Html.BeginForm()){ 
<fieldset>
<div class="editor-label">
@Html.MytripLabelFor("Email",CoreLanguage.Email)
</div>
<div class="editor-field">
@Html.TextBoxFor(m => m.Email)
@Html.ValidationMessageFor(m => m.Email)
</div>
<div class="button"  style="height: 100px;">
@Html.MytripButton(CoreLanguage.save, true,"left")
</div>
</fieldset>
} 
</td></tr>
</table>

	}


@{
    View.Title = Html.MytripPageTitle(GismeteoLanguage.Gismeteo_manager, "/");
    View.Keywords=Html.MytripPageTitle(GismeteoLanguage.Gismeteo_manager, ",");
    View.Description=Html.MytripPageTitle(GismeteoLanguage.Gismeteo_manager, ",");
}
@section csslink{}
@section scriptlink{
@Html.ScriptLink("MicrosoftAjax.js,MicrosoftMvcValidation.js,Mytrip.Mvc.Delete.js")
}
@section contentBig{}
@section contentSmall{}
@section content{
<h1 class="title">@GismeteoLanguage.Gismeteo_manager</h1>
<div class="content">
@Html.GismeteoList()
</div>
<h1 class="title">@GismeteoLanguage.add_Gismeteo</h1>
@{Html.EnableClientValidation();}
@using (Html.BeginForm()){
<fieldset>
<div class="editor-label">
@Html.MytripLabelFor("Title",GismeteoLanguage.Title)
</div><div class="editor-field">   
@Html.TextBoxFor(model => model.Title, new { style = "width: 350px;" })
@Html.ValidationMessageFor(model => model.Title)
</div><div class="editor-label">
@Html.MytripLabelFor("UrlXml",GismeteoLanguage.UrlXml) <a href="http://informer.gismeteo.ru/getcode/xml.php" target="_blank">informer.gismeteo.ru</a>
</div><div class="editor-field">
@Html.TextBoxFor(model => model.UrlXml, new { style = "width: 350px;" })
@Html.ValidationMessageFor(model => model.UrlXml)
</div><div class="editor-label">
@Html.CheckBoxFor(model => model.VisibleInformer)
@Html.MytripLabelFor("VisibleInformer",GismeteoLanguage.VisibleInformer)
</div><div class="editor-label">
@Html.CheckBoxFor(model => model.AllCulture)
@Html.MytripLabelFor("AllCulture",GismeteoLanguage.AllCulture)
</div>
<div class="button">
@Html.MytripButton(GismeteoLanguage.add_Gismeteo,true,"left")
@Html.MytripButton("/Core/ControlPanel", CoreLanguage.cancel, false,"left") 
</div>
</fieldset>
}
<div class="window"> 
<div class="modalTC">@CoreLanguage.delete</div>
<div class="modalC">
<table class="leftmidle"><tr><td>
@Html.MytripImage("/images/warning.png","warning","i")
</td><td>
<h3 class="hometitle">@CoreLanguage.are_you_sure</h3>
</td></tr></table>  
<div class="button">
@Html.MytripButton(CoreLanguage.cancel, false, "close","right")
@Html.MytripButton(CoreLanguage.remove, true, "enter","right")      
</div>
</div> 
</div>
}



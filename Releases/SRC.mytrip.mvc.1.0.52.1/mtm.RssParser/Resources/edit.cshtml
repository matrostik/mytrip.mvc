@{
    ViewBag.Title = Html.MytripPageTitle(RssparserLanguage.edit_rss_feed, "/");
    ViewBag.Keywords=Html.MytripPageTitle(RssparserLanguage.edit_rss_feed, ",");
    ViewBag.Description=Html.MytripPageTitle(RssparserLanguage.edit_rss_feed, ",");
}
@section scriptlink{
@Html.ScriptLink("jquery.validate.min.js,jquery.validate.unobtrusive.min.js,mtm.jHtmlArea.js,Page/Rssparser.js")
}
@section content{
<h1 class="title">@RssparserLanguage.edit_rss_feed</h1>    
@using (Html.BeginForm()){
<fieldset>
<div class="editor-label">
@Html.HiddenFor(x=>x.RssId)
@Html.LabelFor(model => model.Title, RssparserLanguage.rssfeed_title)
</div><div class="editor-field"> 
@Html.TextBoxFor(x=>x.Title,new { style = "width: 350px;"})
@Html.ValidationMessage("Title")
</div><div class="editor-label">
@Html.LabelFor(model => model.RssUrl, RssparserLanguage.rssfeed_url)
</div><div class="editor-field"> 
@Html.TextBoxFor(x => x.RssUrl, new { style = "width: 350px;" })
@Html.ValidationMessage("RssUrl")
</div><div class="editor-label">
@Html.LabelFor(model => model.ImgUrl, RssparserLanguage.rssfeed_pic)
</div><div class="editor-field"><div class="dark" style="width:206px;"> 
@Html.TextAreaFor(x => x.ImgUrl, new { id = "fotoabstract", style = "height: 200px; width:200px;" })
@Html.ValidationMessage("ImgUrl")
</div></div><div class="editor-label">
@Html.CheckBoxFor(model => model.AllCulture)
@Html.LabelFor(model => model.AllCulture, RssparserLanguage.display_in_all_languages)
</div><div class="button">
@Html.MytripButton("Edit",true,"left")
@Html.MytripButton("/Rssparser/Manager", CoreLanguage.cancel, false,"left") 
</div>
</fieldset>
} 
}


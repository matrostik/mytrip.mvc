@{
    ViewBag.Title = Html.MytripPageTitle(CoreLanguage.change_email, "/");
    ViewBag.Keywords=Html.MytripPageTitle(CoreLanguage.change_email, ",");
    ViewBag.Description=Html.MytripPageTitle(CoreLanguage.change_email, ",");
}
@section scriptlink{
@Html.ScriptLink("jquery.validate.min.js,jquery.validate.unobtrusive.min.js")
}
@section content{
	<h1 class="title">@CoreLanguage.change_email</h1>
    <table class="noborders">
<tr>
<td style="width: 180px;">
         <div style="text-align: center;"><a href='/Home/Profile/@TempData["username"].ToString()'>
@Html.Avatar(TempData["useremail"].ToString(), new { title="Profile"})</a></div>
     @Html.Partial("_profileSmall")
</td>
<td>

    @if(!Model.Change){
using (Html.BeginForm()){ 
<fieldset>
<div class="editor-label">
@Html.LabelFor(m => m.Email, CoreLanguage.Email)
</div>
<div class="editor-field">
@Html.TextBoxFor(m => m.Email)
@Html.ValidationMessageFor(m => m.Email)
</div>
<div class="button">
@Html.MytripButton(CoreLanguage.save, true,"left")
</div>
</fieldset>
} }else{
 <div class="appr">
<p>@CoreLanguage.email_success</p>
</div>   
}
</td></tr>
</table>
	}


@{
    ViewBag.Title = Html.MytripPageTitle(Model.PageTitle, "/");
    ViewBag.Keywords=Html.MytripPageTitle(Model.PageTitle, ",");
    ViewBag.Description=Html.MytripPageTitle(Model.PageTitle, ",");
}
@section scriptlink{
@Html.ScriptLink("jquery.validate.min.js,jquery.validate.unobtrusive.min.js,jquery.form.js,Page/Store.EditorCategory.js")
}
@section content{
<h1 class="title">@Model.PageTitle</h1>
<table class="@WrapRes.StyleTable2_12">
<tr>
@Html.Raw(string.Format(WrapRes.StyleTable2_14, ""))
@Html.Raw(string.Format(WrapRes.StyleTable2_15, "width:300px;"))
@Html.Raw(WrapRes.StyleTable2_16)
@Html.Raw(string.Format(WrapRes.StyleTable2_17, ""))
@using (Html.BeginForm()){
<div class="editor-label">
@Html.LabelFor(m => m.Title, Model.LabelForTitle)
</div><div class="editor-field">
@Html.TextBoxFor(m => m.Title)
@Html.ValidationMessageFor(m => m.Title) 
</div>
<div class="editor-label">
@Html.LabelFor(m => m.Body, StoreLanguage.body)
</div>
<div class="editor-field"><div class="dark">
@Html.TextAreaFor(m => m.Body, new { id = "abstract", style = "height: 200px; width:100%;" })
@Html.ValidationMessageFor(m => m.Body) 
</div></div>
<div class="editor-label">
@Html.CheckBoxFor(m => m.AllCulture)
@Html.LabelFor(m => m.AllCulture, StoreLanguage.allculture)
</div>
<div class="editor-label">
@Html.LabelFor(m => m.Sale, StoreLanguage.Sale)
</div><div class="editor-field">
@Html.DropDownListFor(m => m.Sale, Model.SelectSale)
</div>

 
<div class="button">
@Html.MytripButton(Model.Submit, true,"left")
@*@Html.MytripButton("", StoreLanguage.back, false, "left")*@
</div>
}
@Html.Raw(WrapRes.StyleTable2_13)
@Html.Raw(string.Format(WrapRes.StyleTable2_18, "width:300px;"))

<form id="myForm" action="/Store/UploadFile" method="post" enctype="multipart/form-data" >
<div class="editor-label">
@Html.LabelFor("image", Model.LabelForImage)
@Html.HiddenFor(x=>x.Param)
</div><div class="last"></div><div style="clear: both;"></div>
<div class="textboxR">@Html.MytripInputFile("file","id")</div>
<div id="divfiletext" class="textboxR">@Html.TextBox("a", "", new { id="filetext"})</div>
<div style="clear: both;"></div><div class="last"></div>
 @Html.MytripButton(CoreLanguage.upload,true,"right")
</form><table class="noborders"><tr><td>
<div id="_myForm">
@Model.Image
</div></td></tr>
</table>
@Html.Raw(WrapRes.StyleTable2_13)
@Html.Raw(WrapRes.StyleTable2_16)
@Html.Raw(string.Format(WrapRes.StyleTable2_19, ""))
@Html.Raw(string.Format(WrapRes.StyleTable2_20, "width:300px;"))
</tr></table>

<div id="delete" class="window"> 
<div class="modalTC">@CoreLanguage.delete</div>
<div class="modalC">
<table class="leftmidle"><tr><td>
@Html.MytripImage("/images/warning.png","warning","i")
</td><td>
<h3 class="hometitle">@CoreLanguage.are_you_sure</h3>
</td></tr></table>  
<div class="button">
@Html.MytripButton(CoreLanguage.cancel, false, "close","right")
@Html.MytripButton(CoreLanguage.remove, true, "enter","right")
</div></div></div>     
}


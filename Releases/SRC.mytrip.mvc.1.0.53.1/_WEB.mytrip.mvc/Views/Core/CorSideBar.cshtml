@{
    ViewBag.Title = Html.MytripPageTitle(CoreLanguage.sidebar_setting);
    ViewBag.Keywords = mtm.Core.Settings.CoreSetting.HomePageKeyWords();
    ViewBag.Description = mtm.Core.Settings.CoreSetting.HomePageDesc();
}
@section scriptlink{
@Html.ScriptLink("Page/Core.CorSideBar.js")
}
@section content{
@Html.BreadCumps(">", Model.bread)
<h1 class="title">@CoreLanguage.sidebar_setting</h1>
* @CoreLanguage.sidebar_setting. @CoreLanguage.menu_setting_desc
<table id="content" class="separate">
<tr>
<td style="width:50%;">
<h3 class="hometitle">@CoreLanguage.display_in_menu</h3>
</td>
<td style="width:50%;">
<h3 class="hometitle">@CoreLanguage.available_menuitems</h3>
</td>
</tr><tr>
<td style="width:50%;" id="left">
<div class="last"></div>
@foreach (var item in Model.HomeItems){
<div id="@item.Index"><div class="last"></div>
<div class="dark">
<table class="noborders">
<tr><td> 
<span>
@Html.MytripImageLink("addremove"+item.Index,"#","/images/rightarrow_blue.png",CoreLanguage.remove,"img16")
</span>
<span id="@("index"+item.Index)">@item.Index</span>
<b>(@item.Culture)</b>
<input id="@("assembly"+item.Index)"  type="hidden" value="@item.Assembly" />
<label id="@("title"+item.Index)">@item.Name</label>
<span id="@("sort"+item.Index)" class="right">
@Html.MytripImageLink("up"+item.Index,"#","/images/uparrow_blue.png",CoreLanguage.up,"img16")
@Html.MytripImageLink("down"+item.Index,"#","/images/downarrow_blue.png",CoreLanguage.down,"img16")
</span>
</td></tr>
</table>
</div>
<div class="last"></div></div>
} 
<div class="last"></div>
</td>
<td style="width:50%;" id="right">
<div class="last"></div>
@foreach (var newitem in Model.NewHomeItems){
<div id="@newitem.Index">
<div class="last"></div>
<div class="dark">
<table class="noborders">
<tr><td> 
<span>
@Html.MytripImageLink("addremove"+newitem.Index,"#","/images/leftarrow_blue.png",CoreLanguage.remove,"img16")
</span>
<span id="@("index"+newitem.Index)"></span>
<b>(@newitem.Culture)</b>
<input id="@("assembly"+newitem.Index)"  type="hidden" value="@newitem.Assembly" />
<label id="@("title"+newitem.Index)">@newitem.Name</label>
<span id="@("sort"+newitem.Index)" class="right" style="display: none;">
@Html.MytripImageLink("up"+newitem.Index,"#","/images/uparrow_blue.png",CoreLanguage.up,"img16")
@Html.MytripImageLink("down"+newitem.Index,"#","/images/downarrow_blue.png",CoreLanguage.down,"img16")
</span>
</td> 
</tr>
</table>
</div>
<div class="last"></div></div>
} 
<div class="last"></div>
</td>
</tr>
</table>
<div class="button">
@Html.MytripButton(CoreLanguage.save, true,"save","left")
@Html.MytripButton("/Core/ControlPanel", CoreLanguage.Backtocontrolpanel, false,"left") 
<span id="result" style="padding-left:10px;"></span>
</div>
}
@{
    ViewBag.Title = Html.MytripPageTitle(ArticleLanguage.articles_manager);
    ViewBag.Keywords=mtm.Articles.ModuleSetting.ArticlesPageKeyWords();
    ViewBag.Description=mtm.Articles.ModuleSetting.ArticlesPageDesc();
}
@section content{
@Html.BreadCumps(">", Model.bread)
<h1 class="title">
@ArticleLanguage.articles_manager</h1>
<div class="content">
@Html.ArchiveStatistic()
</div>
<h1 class="title">
@ArticleLanguage.latest_updates</h1>
<div class="content">
<div class="right">
@Html.CountPager(Model.Count)
</div>
@Html.LatestUpdates(Model.Count) 
</div>
<h1 class="title">
@Html.ActionLink(ArticleLanguage.closed_articles,"ArchiveDetails",new {id="ClosedArticles"}) 
</h1>
<div class="content">
@Html.ClosedArticles(Model.Count)
</div>
}
}
@{
    ViewBag.Title = Html.MytripPageTitle(ArticleLanguage.article_setting);
    ViewBag.Keywords = mtm.Articles.ModuleSetting.ArticlesPageKeyWords();
    ViewBag.Description = mtm.Articles.ModuleSetting.ArticlesPageDesc();
}
@section scriptlink{
@Html.ScriptLink("jquery.validate.min.js,jquery.validate.unobtrusive.min.js,mtm.CheckedShow.js")
}
@section content{
@Html.BreadCumps(">", Model.bread)
<h1 class="title">@ArticleLanguage.article_setting</h1>
<div id="errorsumm"></div>
<div class="last"></div>
@using (Html.BeginForm()) {
<fieldset>       
<div class="editor-field">
@Html.CheckBoxFor(model => model.articles)
@Html.LabelFor(model => model.articles, ArticleLanguage.unlock_articles)
</div><div class="editor-field">
@Html.CheckBoxFor(model => model.blogs)
@Html.LabelFor(model => model.blogs, ArticleLanguage.unlock_blogs)
</div><div name="closecountCommentForBlogs" style="display: none">
<div class="editor-label">
@Html.LabelFor("countCommentForBlogs", ArticleLanguage.countCommentForBlogs)
</div><div class="editor-field">
@Html.TextBoxFor(model => model.countCommentForBlogs)
@Html.ValidationMessageFor(model => model.countCommentForBlogs)
</div></div>
<div class="editor-field">
@Html.CheckBoxFor(model => model.closecountCommentForBlogs, new { id = "closecountCommentForBlogs_hideOnDiv" })
@Html.LabelFor("closecountCommentForBlogs_hideOnDiv", ArticleLanguage.closecountCommentForBlogs)
</div><div class="editor-field">
@Html.CheckBoxFor(model => model.viewInfoAuthorArticle)
@Html.LabelFor(model => model.viewInfoAuthorArticle, ArticleLanguage.viewInfoAuthorArticle)
</div><div class="editor-field">
@Html.CheckBoxFor(model => model.viewInfoViewsArticle)
@Html.LabelFor(model => model.viewInfoViewsArticle, ArticleLanguage.viewInfoViewsArticle)
</div><div class="editor-field">
@Html.CheckBoxFor(model => model.showRelatedLinks)
@Html.LabelFor(model => model.showRelatedLinks, ArticleLanguage.showRelatedLinks)
</div><div class="editor-field">
@Html.CheckBoxFor(model => model.viewInfoClosedComments)
@Html.LabelFor(model => model.viewInfoClosedComments, ArticleLanguage.viewInfoClosedComments)
</div><div class="editor-label" style="display:@Model.viewAdmin">
@Html.LabelFor(model => model.roleArticleEditor, ArticleLanguage.roleArticleEditor)
</div><div class="editor-field" style="display:@Model.viewAdmin"> 
@Html.TextBoxFor(model => model.roleArticleEditor)
@Html.ValidationMessageFor(model => model.roleArticleEditor)
</div><div class="editor-label" style="display:@Model.viewAdmin">
@Html.LabelFor(model => model.roleBlogger, ArticleLanguage.roleBlogger)
</div><div class="editor-field" style="display:@Model.viewAdmin">
@Html.TextBoxFor(model => model.roleBlogger)
@Html.ValidationMessageFor(model => model.roleBlogger)
</div>
<div class="editor-label" style="display:@Model.viewAdmin">
@Html.LabelFor(model => model.partialAccordion, "Partial Accordion")
</div><div class="editor-field" style="display:@Model.viewAdmin">
@Html.TextBoxFor(model => model.partialAccordion)
@Html.ValidationMessageFor(model => model.partialAccordion)
</div>
<div class="editor-label" style="display:@Model.viewAdmin">
@Html.LabelFor(model => model.partialNoAccordion, "Partial No Accordion")
</div><div class="editor-field" style="display:@Model.viewAdmin">
@Html.TextBoxFor(model => model.partialNoAccordion)
@Html.ValidationMessageFor(model => model.partialNoAccordion)
</div>
<div class="editor-label" style="display:@Model.viewAdmin">
@Html.LabelFor(model => model.partialMenuLogon, "Partial Menu Logon")
</div><div class="editor-field" style="display:@Model.viewAdmin">
@Html.TextBoxFor(model => model.partialMenuLogon)
@Html.ValidationMessageFor(model => model.partialMenuLogon)
</div>
<div class="editor-label" style="display:@Model.viewAdmin">
@Html.LabelFor(model => model.partialMenuLogonWrap, "Partial Menu Logon Wrap")
</div><div class="editor-field" style="display:@Model.viewAdmin">
@Html.TextBoxFor(model => model.partialMenuLogonWrap)
@Html.ValidationMessageFor(model => model.partialMenuLogonWrap)
</div>
<div class="button">
@Html.MytripButton(CoreLanguage.save, true,"left")
@Html.MytripButton("/Core/ControlPanel", CoreLanguage.cancel, false,"left") </div>
</fieldset> 
}
}
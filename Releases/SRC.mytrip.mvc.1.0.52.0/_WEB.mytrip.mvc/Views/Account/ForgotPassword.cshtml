@{
    ViewBag.Title = Html.MytripPageTitle(CoreLanguage.forgotPassword, "/");
    ViewBag.Keywords = Html.MytripPageTitle(CoreLanguage.forgotPassword, ",");
    ViewBag.Description = Html.MytripPageTitle(CoreLanguage.forgotPassword, ",");
}
@section scriptlink{
@Html.ScriptLink("jquery.validate.min.js,jquery.validate.unobtrusive.min.js")
}
@section content{
<h2 class="title">@CoreLanguage.forgotPassword</h2>
@if(Model.sendemail)
{
<div class="appr">
@Model.message
</div>
    
}else{
    using (Html.BeginForm()) {
    <fieldset>
        @Model.message
        <div class="editor-label">
            @Html.LabelFor(model => model.Email, CoreLanguage.forgotEmail)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Email)
        </div>
       
<div class="button">
@Html.MytripButton(CoreLanguage.send, true,"left")
</div>
    </fieldset>
}}
}


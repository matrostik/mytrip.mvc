@{
    View.Title = Html.MytripPageTitle(ArticleLanguage.articles_manager, "/");
    LayoutPage = "~/Views/Shared/_Layout.cshtml";
    View.Keywords=Html.MytripPageTitle(ArticleLanguage.articles_manager, ",");
    View.Description=Html.MytripPageTitle(ArticleLanguage.articles_manager, ",");
}
@section content{
<h1 class="title">
@ArticleLanguage.articles_manager</h1>
<div class="content">
@Html.ArchiveStatistic()
</div>
<h1 class="title">
@ArticleLanguage.latest_updates</h1>
<div class="content">
<div class="right">
@Html.CountPager(Model.Count)
</div>
@Html.LatestUpdates(Model.Count) 
</div>
<h1 class="title">
@Html.ActionLink(ArticleLanguage.closed_articles,"ArchiveDetails",new {id="ClosedArticles"}) 
</h1>
<div class="content">
@Html.ClosedArticles(Model.Count)
</div>
}

